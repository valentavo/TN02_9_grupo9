<!DOCTYPE html>
<html lang="en">

    <%- include('.././partials/head.ejs', {title: 'Carrito de compras'}) %>
    <body>

       <%- include('.././partials/header.ejs') %>

        <main class="c_cart-main">
            <h1>MI CARRITO</h1>
            <% productos.forEach(row => { %>
            <article>
                <div class="c_left-product">
                    <div class="c_product-img-container">
                       <a href="/product/detail/<%=row.id%>"><img src="/img/<%=row.img%>" alt="imagen del producto"></a>
                    </div>
                    <div class="c_product-description">
                        <h3><a href="/product/detail/<%=row.id%>"><%=row.title%></a></h3>
                        <div>
                            <button><i class="fa-solid fa-minus"></i></button>
                            <p>1</p>
                            <button><i class="fa-solid fa-plus"></i></button>
                        </div>
                    </div>
                </div>
                <div class="c_right-product">
                    <p class="c_price">$<%=row.price%></p>
                    <button class="c_delete-item">
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                </div>
            </article>
            <% }) %>
            <section class="c_suma-precio">
                <p>Total</p>
                <p>$100,000.00</p>
            </section>
            <div class="c_boton-pagar">
                <a href="#">MÃ©todo de pago</a>
            </div>
        </main>

        <%- include('.././partials/footer.ejs') %>
    </body>
</html>