<!-- MAIN --> 
<section class="productCart">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-12 mx-auto">
                <div class="row mt-5 mb-5 gx-3">
                    <!---left side div -->
                    <div class="col-lg-8 col-11 mx-auto main-cart mb-lg-0 mb-5 ">
                        <div class="card">
                            <h2 class="mx-auto py-4"> CARRITO DE COMPRAS</h2>
                        </div>
                        <div class="card p-4 mt-2">
                            <div class="row">
                                <!--cart images div--->
                                
                                <div class="col-lg-5 col-sm-11 col-11 mx-auto bg-light d-flex justify-content-center align-items-center shadow">
                                    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
                                        <div class="carousel-inner">
                                          <div class="carousel-item active">
                                            <img src="pomegranate-cream.png" class="d-block w-100" alt="...">
                                          </div>
                                          <div class="carousel-item">
                                            <img src="12.png" class="d-block w-100" alt="...">
                                          </div>
                                          <div class="carousel-item">
                                            <img src="13.png" class="d-block w-100" alt="...">
                                          </div>
                                        </div>
                                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                          <span class="visually-hidden">Previous</span>
                                        </button>
                                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                          <span class="visually-hidden">Next</span>
                                        </button>
                                    </div>
                                </div>
                                <!--cart product details-->
                                <div class="col-lg-7 col-sm-11 col-11 mx-auto px-4 mt-2">
                                    <div class="row">
                                        <div class="col-lg-8 col-11">
                                            <h4 class="mb-4 mt-3 mt-lg-0"> Nombre del producto</h4>
                                            <p class="mb-2">Labial Revlon</p>
                                            <p class="mb-2">Product Color: Rojo</p>
                                            <p class="mb-2">Product Size: 75ml</p>
                                        </div>
                                        <div class="col-lg-4 col-11 mt-4">

                                            <div class="justify-content-end align-items-center mt-lg-4 mb-lg-2 mb-4">
                                
                                                <input type="number" step="1" max="10" value="1" name="quantity" class="cantidad">
                                                
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row mt-lg-4 py-lg-3">
                                        <div class="col-lg-9 col-6 d-flex justify-content-between">
                                            <button type="submit" class="btn eliminar_editar mt-2 text-center "><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill me-1" viewBox="0 0 16 16">
                                                <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                                              </svg>ELIMINAR PRODUCTO</button>
                                            <button type="submit" class="btn eliminar_editar mt-2 text-center"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill me-1" viewBox="0 0 16 16">
                                                <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                                              </svg>AGREGAR A FAVORITOS</button>

                                        </div>
                                        <div class="col-lg-3 col-6 d-flex justify-content-end">
                                            <p class="mt-3 text-center" id="price_money">$<span id="itemval">2500.00</span></p>
                                        </div>

                                    </div>

                                </div>

                            </div>
                            
                        </div>    
                    </div>
                    <!---LEFT SIDE DIV-->
                    <div class="col-lg-4 col-md-11 col-sm-11 col-11 mx-auto mt-lg-0 ">
                        <div class="rigth_side p-3 shadow bg-white">
                            <h2 class="mb-5">TOTAL</h2>
                            <div class="price_indiv d-flex justify-content-between">
                                <p>Total producto</p>
                                <p>$<span>0.00</span></p>
                            </div>
                            <div class="price_indiv d-flex justify-content-between">
                                <p>Total Envio</p>
                                <p>$<span>0.00</span></p>
                            </div>
                            <div class="price_indiv d-flex justify-content-between">
                                <p>Descuento</p>
                                <p>$<span>0.00</span></p>
                            </div>
                            <hr/>
                            <div class="total-amt d-flex justify-content-between font-weight-bold">
                                <p>Total (Incluye IVA)</p>
                                <p>$<span id="total_cart_amt">0.00</span></p>
                            </div>
                            <button class="checkout btn btn-primary">PAGAR AHORA</button>

                        </div>
                        <!---discount part-->
                        <div class="discount-code mt-3 shadow">
                            <div class="card">
                                <div class="card-body">
                                    <div class="accordion accordion-flush" id="accordionFlushExample">
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="flush-headingTwo">
                                              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                                                Agrega tu codigo de descuento: 
                                              </button>
                                            </h2>
                                            <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
                                                <div class="accordion-body">  
                                                    <div class="mt-2">
                                                        <input type="text" name="" id="discount_code1" class="checkout_input form-control font-weight-bold" placeholder="Ingresa tu codigo de descuento" >
                                                    </div>
                                                    <button class="checkout btn btn-primary btn-sm mt-3" type="submit"> APLICAR DESCUENTO</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="flush-headingThree">
                                              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                                                Detalles del envio:
                                              </button>
                                            </h2>
                                            <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">
                                                <div class="accordion-body">  
                                                    <div class="mt-2">
                                                        <input type="text" name="" id="discount_code1" class="checkout_input form-control font-weight-bold" value="Direccion del cliente" >
                                                    
                                                        <button class="checkout btn btn-primary btn-sm mt-3" type="submit"> CAMBIAR LA DIRECCION</button>
                
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="flush-headingFour">
                                              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseFour" aria-expanded="false" aria-controls="flush-collapseFour">
                                                Detalles de Pago:
                                              </button>
                                            </h2>
                                            <div id="flush-collapseFour" class="accordion-collapse collapse" aria-labelledby="flush-headingFour" data-bs-parent="#accordionFlushExample">
                                                <div class="accordion-body">  
                                                    <div class="mt-2">
                                                        <p>Selecciona tu metodo de pago:</p>
                                                        <select class="checkout_input">
                                                            <option>Tarjeta de Debito</option>
                                                            <option>Tarjeta de Credito</option>
                                                            <option>Mercado Pago</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div> 
                                    </div>
                                </div>
                            </div>
                    
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- SUBSCRIBITE  -->
<section class="subscribite py-4 px-4" >
        
    <div class="container subscribite">
        <div class="row ">
            <div class="col-lg-12 text-center py-3">
                
                <h1 class="head3" >Recibí novedades, promociones y beneficio</h1>
        
            </div>
        </div>
        <div class="row">
            <form action="" method="post" class="row formSubscribe g-3 smalltext">
                    <div class="col-lg-3">
                    <label for="name" class="form-label subscribiteLabel"> First Name</label>
                    <input type="text" class="form-control" id="name" placeholder="First Name" required>
                    </div>
                    <div class="col-lg-3">
                    <label for="lastname" class="form-label subscribiteLabel">Name</label>
                    <input type="text" class="form-control" id="lastname" placeholder="Last Name" required>
                    </div>
                    <div class="col-lg-4">
                    <label for="inputEmail4" class="form-label subscribiteLabel">Email Address</label>
                    <input type="email" class="form-control" id="inputEmail4" placeholder="Email Address" required>
                    </div>
        
                    <div class="col-2 mx-auto mx-sm-auto mx-md-auto" >
                    <button type="submit" class="btn subscribiteBtn mx-auto ms-lg-4 mt-lg-4 px-2">Subscribite</button>
                    </div>
            </form>
        </div>

    </div>
</section>

