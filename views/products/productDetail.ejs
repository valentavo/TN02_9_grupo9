<!DOCTYPE html>
<html lang="en">

    <%- include('.././partials/head.ejs', {title: 'Detalle del producto'}) %>
    <body>
       <%- include('.././partials/header.ejs') %>

        <main >
            <section class="d_description-main">
                <section class="d_img-container">
                    <img src="/img/<%=producto.img%>" alt="imagen del producto">
                </section>
                <section class="d_product-interaction">
                    <h1><%=producto.title%></h1>
                    <div class="d_size-product">
                        <form action="/product/detail" method="GET">
                            <% producto.capacity.forEach( row => { %>
                                <label for="ml<%=row%>"><%=row%> ml</label>
                                <input type="radio" name="size" id="ml<%=row%>">
                            <% }) %>
                        </form>
                    </div>
                    <% if(producto.color) { %>
                        <form action="/product/detail" method="GET" class="d_color-input">
                            <select name="colorType" id="color-option">
                                <% producto.color.forEach( row => { %>
                                    <option value="<%=row%>"><%=row%></option>
                                <% }) %>
                            </select>
                        </form>
                    <% } %>
                    <p class="d_price">$<%=producto.price%></p>
                    <div class="d_button-flex">
                        <button class="d_add-to-cart"><a href="/product/cart">AGREGAR AL CARRITO</a></button>
                    </div>
                </section>
                <section class="d_description">
                    <p class="d_description-info">
                    <%=producto.description%>
                    </p>
                </section>
            </section>
            <section class="d_reviews">
                <h3>Referencias</h3>
                <div class="d_user-review-img-container">
                    <img src="/img/generic-user.jpg" alt="generic profile user image responsable for the review">
                </div>
                <div class="d_review-info">
                    <p class="d_date-submited-review">05-26-2023</p>
                    <p class="d_description-review">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. In fugiat, exercitationem rem
                    </p>
                </div>
            </section>
        </main>
        <%- include('.././partials/footer.ejs') %>
    </body>
</html>