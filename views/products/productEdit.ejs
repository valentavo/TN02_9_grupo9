<!-- MAIN --> 
<section class="productEdit">
    <div class="container bg-white shadow rounded-lg px-3 mt-5 py-4 mb-5">
        <div class="row">
            <div class="col-lg-7">
                <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false" data-bs-interval="false">
                    <div class="carousel-inner" id="image-container">
                    
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                    </button>
                </div>

            </div>
            <div class="col-12 col-lg-5">
                <h3 class="productName my-2 mb-4">EDITAR PRODUCTO</h3>

                <!-- <form action="/product/edit/--ejs--?_method=PUT" method="POST" enctype="multipart/form-data"> -->
                
                    <div class="form-group productLabel my-2" id="title-container">
                        <label class="mb-2">Nombre del producto</label>
                    </div>

                    <div class="form-group productLabel my-2">
                        <label class="mb-2">Imagen del producto</label>
                        <input type="file" class="form-control" name="img" multiple>
                    </div>

                    <div class="form-group productLabel my-2" id="price-container">
                        <label class="mb-2">Precio del producto</label>
                    </div>

                    <div class="form-group productLabel my-2">
                        <label class="mb-2" for="labels">Categorias</label>
                        <select class="form-control" name="categoria" id="labels" >

                        </select>
                    </div>

                    <div class="form-group productLabel my-2">
                        <label class="mb-2" for="meassures">Tama√±o del producto</label>
                        <select class="form-control" name="medida" id="meassures">

                       </select>
                    </div>

                    <div class="form-group productLabel my-2">
                        <label class="mb-2" for="colors">Color</label>
                        <select class="form-control" name="color" id="colors">
                        
                        </select>
                    </div>

                    <div class="form-group productLabel my-2">
                        <label class="mb-2" for="brands">Marca</label>
                        <select class="form-control" name="brand" id="brands">

                        </select>
                    </div>
        

                    <div class="form-group productLabel my-2" id="stock-container">
                        <label class=" mb-2">Stock disponible:</label>
                        
                    </div>

                    <div class="col-md-12 productLabel my-2">
                        <div class="form-group" id="detail-container">
                            <label class=" mb-2">Descripcion</label>
                            
                        </div>
                    </div>

                    <div class=" my-4">
                        <button class="btn productEditBtn me-4" type="submit">Update</button>
                        <button class="btn productEditBtn" type="reset">Cancel</button>
                    </div>

                <!-- </form> -->
                
                <!-- <form action="/product/delete/--ejs--?_method=DELETE" method="POST" enctype="multipart/form-data"> -->
                    <button class="btn productEditBtn" type="submit">Eliminar Producto</button>
                <!-- </form> -->
            </div>
        </div>
    </div>
</section>

<!-- MAIN--> 

