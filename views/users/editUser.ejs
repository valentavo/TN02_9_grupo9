<!-- MAIN --> 
<section class="py-4 my-3 mb-5">
    <div class="container userProfile">
        <div class="bg-white shadow rounded-lg d-block d-sm-flex py-3 px-3 mt-3 mb-3">
            <div class="profile-tab-nav border-right px-2">
                <div class="p-4">
                    <div class="img-circle text-center mb-3">
                        <img src="defaultProfilePhoto.jpeg" alt="Image" class="shadow">
                    </div>
                    <h4 class="text-center">Usuario Apellido</h4>
                </div>
               
                <div class="nav flex-column nav-pills me-3 ms-3 mb-4" id="v-pills-tab" role="tablist" aria-orientation="vertical">

                        <button class="nav-link" id="v-pills-profile-tab" data-bs-toggle="pill" data-bs-target="#v-pills-profile" type="button" role="tab" aria-controls="v-pills-profile" aria-selected="false">
                            <i class="text-center"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/>
                            </svg></i> Perfil
                        </button>

                        <button class="nav-link" id="v-pills-password-tab" data-bs-toggle="pill" data-bs-target="#v-pills-password" type="button" role="tab" aria-controls="v-pills-password" aria-selected="false">
                            <i class="text-center"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-file-lock2-fill" viewBox="0 0 16 16">
                            <path d="M7 6a1 1 0 0 1 2 0v1H7V6z"/>
                            <path d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm-2 6v1.076c.54.166 1 .597 1 1.224v2.4c0 .816-.781 1.3-1.5 1.3h-3c-.719 0-1.5-.484-1.5-1.3V8.3c0-.627.46-1.058 1-1.224V6a2 2 0 1 1 4 0z"/>
                            </svg></i> Contrasenia
                        </button>

                    
                </div>
               
            </div>
            <div class="tab-content px-2 py-3" id="v-pills-tabContent">
            
                <div class="tab-pane fade show active" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                    <h3 class="mb-4">Configuracion de la cuenta</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                  <label>Nombre</label>
                                  <input type="text" class="form-control" value="Usuario">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                  <label>Apellido</label>
                                  <input type="text" class="form-control" value="Apellido">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                  <label>Email</label>
                                  <input type="text" class="form-control" value="usuario@gmail.com">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                  <label>Numero de telefono</label>
                                  <input type="text" class="form-control" value="+54 345 667899">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                  <label>Direccion</label>
                                  <input type="text" class="form-control" value="calle falsa 123">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Otro campo</label>
                                <input type="password" class="form-control">
                          </div>
        
                        </div>
                       
                    </div>
                    <div class="my-4">
                        <button class="btn editar">Update</button>
                        <button class="btn editar">Cancel</button>
                    </div>
                </div>

                <div class="tab-pane fade " id="v-pills-password" role="tabpanel" aria-labelledby="v-pills-password-tab">
                    <h3 class="mb-4">Cambiar contrasenia</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                  <label>Old password</label>
                                  <input type="password" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                  <label>Nueva password</label>
                                  <input type="password" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                  <label>Confirmar nueva password</label>
                                  <input type="password" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div>
                        <button class="btn editar">Update</button>
                        <button class="btn editar">Cancel</button>
                    </div>
                </div>   
                
                <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
                    <h3 class="mb-4">Mis Compras</h3>
                </div>
                    
            </div>
        </div>
    </div>
</section>

